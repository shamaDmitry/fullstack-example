generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Employees  {
  id          Int      @id @default(autoincrement())
  fullName    String
  email       String   @unique
  positionId  Int
  position    Position @relation(fields: [positionId], references: [id])
  department  String
  salary      Float
  createdAt   DateTime @default(now())
}

model Position  {
  id          Int         @id @default(autoincrement())
  name        String
  employees   Employees[]
}
